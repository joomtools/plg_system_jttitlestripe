<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" group="system" method="upgrade">
	<name>PLG_JT_TITLESTRIPE_XML_NAME</name>
	<author>Guido De Gobbis</author>
	<creationDate>##DATE##</creationDate>
	<authorEmail>support@joomtools.de</authorEmail>
	<authorUrl>http://joomtools.de</authorUrl>
	<copyright>(C) ##YEAR## JoomTools.de. All rights reserved.</copyright>
	<license>GNU General Public License version 3 or later</license>
	<version>##VERSION##</version>
	<description>PLG_JT_TITLESTRIPE_XML_DESCRIPTION</description>

	<files>
		##FILES##
	</files>

	<scriptfile>script.php</scriptfile>

	<config>
		<fields name="params">
			<fieldset name="basic">

				<field name="breakStripe"
				       type="text"
				       label="PLG_JT_TITLESTRIPE_XML_BREAKSTRIPE_LABEL"
				       default="|n|"
				       description="PLG_JT_TITLESTRIPE_XML_BREAKSTRIPE_DESCRIPTION"/>

				<field name="stripe"
				       type="text"
				       label="PLG_JT_TITLESTRIPE_XML_STRIPE_LABEL"
				       default="||"
				       description="PLG_JT_TITLESTRIPE_XML_STRIPE_DESCRIPTION"/>

				<field name="tags"
				       type="text"
				       label="PLG_JT_TITLESTRIPE_XML_TAGS_LABEL"
				       default=""
				       description="PLG_JT_TITLESTRIPE_XML_TAGS_DESCRIPTION"/>

				<field name="css"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="PLG_JT_TITLESTRIPE_XML_CSS_LABEL"
				       default="1"
				       description="PLG_JT_TITLESTRIPE_XML_CSS_DESCRIPTION">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="inModule"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       default="0"
				       label="PLG_JT_TITLESTRIPE_XML_INMODULE_LABEL"
				       description="PLG_JT_TITLESTRIPE_XML_INMODULE_DESCRIPTION">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="debug"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       default="0"
				       label="PLG_JT_TITLESTRIPE_XML_DEBUG_LABEL"
				       description="PLG_JT_TITLESTRIPE_XML_DEBUG_DESCRIPTION">
					<option value="1">JOFF</option>
					<option value="0">JON</option>
				</field>
			</fieldset>
		</fields>
	</config>

	<updateservers>
		<server type="extension" priority="1" name="PLG_JT_TITLESTRIPE_XML_NAME">https://raw.githubusercontent.com/joomtools/plg_system_jttitlestripe/master/update.xml</server>
	</updateservers>
</extension>
